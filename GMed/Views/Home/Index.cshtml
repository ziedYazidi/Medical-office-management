@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>GMed</h1>
    <p class="lead">Application de gestion de cabinet médical pour chirurgien</p>

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/Images/logo.png" alt="image1" style="text-align:center">

            </div>
            <div class="item">
                <!-- oui -->
                <img src="~/Content/Images/1751.jpg" alt="image2" style="text-align:center">
            </div>
            <div class="item">
                <!-- oui -->
                <img src="~/Content/Images/image 4.png" alt="image2" style="text-align:center">
            </div>
            <div class="item">
                <!-- oui -->
                <img src="~/Content/Images/image5.png" alt="image2" style="text-align:center">
            </div>



        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

